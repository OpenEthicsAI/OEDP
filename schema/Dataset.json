{
  "$id": "https://openethics.ai/schemas/Dataset.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Dataset",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description":"Unique ID for the dataset"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description":"The date and time when the dataset was created, formatted as a date-time string"
    },
    "description": {
      "type": "string",
      "description":"A description of the dataset's content and purpose"
    },
    "version": {
      "type": "string",
      "description":"Version of the dataset"
    },
    "scope": {
      "type": "string",
      "description":"Purpose or application of the dataset"
    },
    "source": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "url": {
          "$ref": ""
        }
      },
      "required": [
        "description"
      ],
      "description": "Where the dataset comes from (including a description and URL)"
    },
    "labeling": {
      "type": "array",
      "items": {
        "$ref": "./Annotation.json"
      },
       "description": "An array of annotations linked to the dataset, each referencing Annotation.json"
    }
  },
  "required": [
    "id",
    "created"
  ],
  "description": "Dataset Model"
}
