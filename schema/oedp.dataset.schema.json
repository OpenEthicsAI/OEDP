{
  "$id": "https://openethics.ai/schema/oedp.dataset.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OEDP Training Dataset Schema",
  "type": "object",
  "description": "Describes fields for the Dataset transparency in OEDP",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique ID for the dataset"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "When the dataset was created"
    },
    "description": {
      "type": "string",
      "description": "Short summary of the dataset"
    },
    "version": {
      "type": "string",
      "description": "Version of the dataset"
    },
    "scope": {
      "type": "string",
      "description": "Purpose or application of the dataset"
    },
    "source": {
      "type": "object",
      "description": "Where the dataset comes from",
      "properties": {
        "description": {
          "type": "string"
        },
        "url": {
          "$ref": ""
        }
      },
      "required": [
        "description"
      ]
    },
    "labeling": {
      "type": "array",
      "description": "List of annotations linked to the dataset, referencing `Annotation.json`",
      "items": {
        "$ref": "https://openethics.ai/schema/oedp.annotation.schema.json"
      }
    }
  },
  "required": [
    "id",
    "created"
  ]
}
